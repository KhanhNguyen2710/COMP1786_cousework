<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.AddFragment"
    >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Add new hike"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTitle"
            android:layout_marginTop="16dp"
            android:text="Name:" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textName"
            android:layout_marginTop="8dp"
            android:hint="Enter name" />

        <TextView
            android:id="@+id/textLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editName"
            android:layout_marginTop="16dp"
            android:text="Location:" />

        <EditText
            android:id="@+id/editLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textLocation"
            android:layout_marginTop="8dp"
            android:hint="Enter location" />

        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editLocation"
            android:layout_marginTop="16dp"
            android:text="Date:" />

        <EditText
            android:id="@+id/editDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textDate"
            android:layout_marginTop="8dp"
            android:hint="Enter date" />

        <TextView
            android:id="@+id/textParking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editDate"
            android:layout_marginTop="16dp"
            android:text="Parking available:" />

        <RadioGroup
            android:id="@+id/radioGroupParking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textParking"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/checkYes"
                android:layout_width="139dp"
                android:layout_height="32dp"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/checkNo"
                android:layout_width="139dp"
                android:layout_height="32dp"
                android:text="No" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/layout_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_below="@id/radioGroupParking">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:text="Length of the hike:"/>

            <EditText
                android:id="@+id/editLength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter text length"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_below="@id/layout_length">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:text="Difficulty level:"/>

            <EditText
                android:id="@+id/editLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter text level"/>
        </LinearLayout>

        <TextView
            android:id="@+id/Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_level"
            android:layout_marginTop="16dp"
            android:text="Description:" />

        <EditText
            android:id="@+id/editDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Description"
            android:layout_marginTop="8dp"
            android:ems="20"
            android:hint="Description..." />

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editDescription"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="127dp"
            android:layout_marginTop="10dp"

            android:layout_marginEnd="127dp"
            android:text="Submit" />

    </RelativeLayout>
</FrameLayout>